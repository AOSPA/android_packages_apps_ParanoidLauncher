<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom|center_vertical|center_horizontal|center"
    android:id="@+id/overview_control_panel"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    launcher:layout_ignoreInsets="true">

    <RelativeLayout
        android:id="@+id/icon_list_container"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_icons_list_height">

        <com.paranoid.quickstep.views.TaskIconsIndicatorDots
            android:id="@+id/task_icons_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="@dimen/oneplus_contorl_shadow_z1" />

        <com.paranoid.quickstep.views.TaskIconsView
            android:id="@+id/task_icons_view"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/task_icons_list_height" />
    </RelativeLayout>

    <TextView
        android:textAppearance="@style/oneplus_contorl_text_style_button"
        android:textColor="@color/oneplus_contorl_text_color_primary_dark"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/clear_all_button"
        android:background="@drawable/bg_clear_all_rect"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/clear_all_height_portrait"
        android:text="@string/overview_clear_all_text"
        android:layout_below="@+id/icon_list_container"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>